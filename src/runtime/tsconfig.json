{
    "references": [
        {
            "path": "../constants"
        },
        {
            "path": "../types"
        }
    ],
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "rootDir": "..",
        "outDir": "../../dist",
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "src/runtime": [
                "./index.ts"
            ],
            "src/types": [
                "../types/index.ts"
            ],
            "src/constants": [
                "../constants/index.ts"
            ],
            "src/runtime/*": [
                "./*"
            ],
        },
        "plugins": [
            // Transform paths in output .js files
            {
                "transform": "typescript-transform-paths"
            },
            // Transform paths in output .d.ts files (Include this line if you output declarations files)
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "index.ts",
        "**/*.ts",
    ],
    "exclude": [
        "./boolean-logic/ifTypeOf.ts"
    ]
}
