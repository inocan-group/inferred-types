{
  "references": [
    {
      "path": "../constants"
    },
    {
      "path": "../types"
    }
  ],
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "../../dist",
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "src/types/*": [
        "../types/*"
      ],
      "src/constants/*": [
        "../constants/*"
      ],
      "src/runtime/*": [
        "./*"
      ],
    },
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
