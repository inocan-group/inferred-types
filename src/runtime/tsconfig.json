{
    "references": [
        {
            "path": "../constants"
        },
        {
            "path": "../types"
        }
    ],
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "rootDir": "../..",
        "outDir": "../../dist/runtime",
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "src/runtime": [
                "./index.ts"
            ],
            "src/types": [
                "../types/index.ts"
            ],
            "src/constants": [
                "../constants/index.ts"
            ],
            "src/runtime/*": [
                "./*"
            ],
        },
    },
    "include": [
        "index.ts",
        "./literals/*.ts",
        "./errors/*.ts",
        "./lists/*.ts",
        "./dictionary/*.ts",
        "./type-guards/*.ts",
        "./type-guards/higher-order/*.ts",
        "./errors/*.ts",
        "./combinators/*.ts",
        "./boolean-logic/*.ts",
        "./initializers/*.ts",
        "./type-conversion/*.ts",
        "./state/*.ts",
        "./functions/*.ts"
    ],
    "exclude": [
        "./dictionary/mapTo.ts",
        "./boolean-logic/ifTypeOf.ts"
    ]
}
