{
    "references": [
        {
            // depends on constants to derive some types
            "path": "../constants"
        }
    ],
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "rootDir": "../..",
        "outDir": "../../dist/types",
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            // allow importing from the root export of the types sub project
            "src/types": [
                "./index.ts"
            ],
            // allow importing all constants to the static "src/constants" path
            "src/constants": [
                "../constants/index.ts"
            ],
            // allow various "index.ts" to import explicit files in the src tree
            "src/types/*": [
                "./*"
            ]
        },
    },
    "include": [
        "./**/*.ts",
        "../../hold/ValidateTypeTransform.ts"
    ]
}
