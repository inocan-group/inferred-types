{
  "references": [
    {
      // depends on constants to derive some types
      "path": "../constants"
    }
  ],
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "../../dist",
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "inferred-types/types": [
        "../types/index.ts"
      ],
      "inferred-types/dist/types": [
        "../types/index.ts"
      ],
      "inferred-types/constants": [
        "../constants/index.ts"
      ],
      "inferred-types/dist/constants": [
        "../constants/index.ts"
      ],
      "inferred-types/runtime": [
        "../runtime/index.ts"
      ],
      "inferred-types/dist/runtime": [
        "../runtime/index.ts"
      ]
    },
  },
  "include": [
    "./**/*.ts"
  ]
}
