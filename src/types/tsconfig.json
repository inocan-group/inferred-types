{
  "references": [
    {
      // depends on constants to derive some types
      "path": "../constants"
    }
  ],
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "../../dist",
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "inferred-types/constants": [
        "../constants/index.ts"
      ],
      "inferred-types/types": [
        "./index.ts"
      ],
      "inferred-types/runtime": [
        "../runtime/index.ts"
      ],
      "src/types/index": [
        "index.ts"
      ],
      "inferred-types/dist/constants/index": [
        "../constants/index.ts"
      ],
      // allow importing all constants to the static "src/constants/index" path
      "src/constants/index": [
        "../constants/index.ts"
      ],
    },
  },
  "include": [
    "./**/*.ts"
  ]
}
