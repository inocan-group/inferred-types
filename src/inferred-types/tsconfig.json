{
  // this project serves only as a means to reference all sub-projects
  // and allow constants, types, and runtime symbols to be exported
  // as a single NPM package.
  "references": [
    {
      "path": "../constants"
    },
    {
      "path": "../types"
    },
    {
      "path": "../runtime"
    }
  ],
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "../../dist",
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "inferred-types/types": [
        "../types/index.ts"
      ],
      "inferred-types/dist/types": [
        "../types/index.ts"
      ],
      "inferred-types/constants": [
        "../constants/index.ts"
      ],
      "inferred-types/dist/constants": [
        "../constants/index.ts"
      ],
      "inferred-types/runtime": [
        "../runtime/index.ts"
      ],
      "inferred-types/dist/runtime": [
        "../runtime/index.ts"
      ]
    },
  }
}
