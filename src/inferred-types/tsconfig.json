{
    // this project serves only as a means to reference all sub-projects
    // and allow constants, types, and runtime symbols to be exported
    // as a single NPM package.
    "references": [
        {
            "path": "../constants"
        },
        {
            "path": "../types"
        },
        {
            "path": "../runtime"
        },
    ],
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "rootDir": "../..",
        "outDir": "./dist",
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            // root export for runtime symbols
            "src/runtime": [
                "../runtime/index.ts"
            ],
            // root export for type symbols
            "src/types": [
                "../types/index.ts"
            ],
            // root export for constant symbols
            "src/constants": [
                "../constants/index.ts"
            ]
        },
    }
}
