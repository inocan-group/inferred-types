{
  // this project serves only as a means to reference all sub-projects
  // and allow constants, types, and runtime symbols to be exported
  // as a single NPM package.
  "references": [
    {
      "path": "../constants"
    },
    {
      "path": "../types"
    },
    {
      "path": "../runtime"
    }
  ],
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "../../dist",
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      // root export for runtime symbols
      "src/runtime/*": [
        "../runtime/*"
      ],
      // root export for type symbols
      "src/types/*": [
        "../types/*"
      ],
      // root export for constant symbols
      "inferred-types/dist/constants/index": [
        "../constants/*"
      ],
      "inferred-types/dist/types/index": [
        "../types/*"
      ],
      "inferred-types/dist/runtime/index": [
        "../runtime/*"
      ],
    },
  }
}
