{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,

    "outDir": "./dist",
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "stripInternal": false,
    "sourceMap": true,
    "paths": {
      "inferred-types/constants": [
        "./src/index.ts"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests", "dist"]
}
