{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "paths": {
            "inferred-types/constants": [
                "./src/index.ts"
            ],
            "constants/*": [
                "./src/*"
            ]
        },
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "preserveConstEnums": true,
        "sourceMap": true,
        "stripInternal": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests",
        "dist"
    ]
}
