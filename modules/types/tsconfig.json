{
    "compilerOptions": {
        "composite": true,
        "target": "ES2022",
        "baseUrl": ".",
        "rootDir": "..",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "paths": {
            "inferred-types/types": [
                "./src/index.ts"
            ],
            "inferred-types/constants": [
                "../constants/src/index.ts"
            ],
            "constants/*": [
                "../constants/*"
            ]
        },
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "sourceMap": true,
        "stripInternal": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "references": [
        {
            // depends on constants to derive some types
            "path": "../constants",
            "types/*": [ "src/*"]
        }
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "tests",
        "dist"
    ]
}
