{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": false,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "paths": {
      "src/*": [
        "src/*"
      ],
    },
    "baseUrl": ".",
  },
  "include": [
    "src",
    "tests"
  ]
}
