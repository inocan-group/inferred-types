{
  "compilerOptions": {
    "module": "ESNEXT",
    "target": "ESNEXT",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2020"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    },
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "tsBuildInfoFile": ".tsbuildinfo",
  },
  "include": [
    "src",
    "tests"
  ]
}
