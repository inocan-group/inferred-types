{
  "extends": "../ts-base.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": "..",
    "baseUrl": ".",
    "outDir": "../../dist/none",
    "paths": {
      "inferred-types": [
        "../modules/inferred-types/dist/index"
      ],
      "inferred-types/types": [
        "../modules/types/dist/index"
      ],
      "inferred-types/runtime": [
        "../modules/runtime/dist/index"
      ],
      "inferred-types/constants": [
        "../modules/constants/dist/index"
      ]
    }
  },
  "include": [
    ".",
    "../src",
  ],
  "exclude": [
    "**/node_modules/*",
  ]
}
