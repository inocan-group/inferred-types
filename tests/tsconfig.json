{
  "extends": "../ts-base.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "noUnusedLocals": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": "..",
    "baseUrl": ".",
    "outDir": "../../dist/none",
    "paths": {
      "inferred-types/types": [
        "../modules/types/src"
      ],
      "inferred-types/runtime": [
        "../modules/runtime/src"
      ],
      "inferred-types/constants": [
        "../modules/constants/src"
      ],
    }
  },
  "include": [
    ".",
    "../modules",
  ],
  "exclude": [
    "**/node_modules/*",
  ]
}
