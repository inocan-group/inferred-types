{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@inferred-types/runtime": [
        "./src/index.ts"
      ]
    },
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
