{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      // allow importing from the root export of the types sub project
      "@inferred-types/types": [
        "./src/index.ts"
      ],
      // allow various "index.ts" to import explicit files in the src tree
      "src/types/*": [
        "./*"
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
