{
    // TypeScript import preferences
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.includePackageJsonAutoImports": "on",
    // Prefer importing from the project's configured paths
    "typescript.preferences.importModuleSpecifierEnding": "minimal",
    // This helps TypeScript understand to use your module names instead of relative paths
    "typescript.suggest.autoImports": true,
    "typescript.suggest.includeCompletionsForImportStatements": true,
    "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
    // Additional settings to influence import behavior
    "typescript.updateImportsOnFileMove.enabled": "always",
    // For JavaScript files as well
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "javascript.preferences.includePackageJsonAutoImports": "on",
    "javascript.updateImportsOnFileMove.enabled": "always",
    // Editor settings that can help
    "editor.codeActionsOnSave": {
        "source.organizeImports": "never"
    },
    // Additional TypeScript settings to control imports
    "typescript.tsserver.pluginPaths": [],
    // Exclude certain patterns from IntelliSense
    "typescript.tsserver.watchOptions": {
        "excludeDirectories": [
            "**/node_modules/@*"
        ]
    },
    // Path intellisense settings (if you have the extension installed)
    "path-intellisense.mappings": {
        "inferred-types/types": "${workspaceRoot}/modules/types/src",
        "inferred-types/constants": "${workspaceRoot}/modules/constants/src",
        "inferred-types/runtime": "${workspaceRoot}/modules/runtime/src"
    },
    // Additional workspace settings
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/@*": true
    },
    // Format on save to ensure consistent imports
    "editor.formatOnSave": false,
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
