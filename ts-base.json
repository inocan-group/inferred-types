{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "incremental": true,
    "resolveJsonModule": false,
    "strict": true,
    // improves build performance
    "skipLibCheck": true,
    "allowJs": false,
    "composite": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "types": []
  }
}
